@model ECommerceApp.Models.ViewModels.AdminDashboardVM

<h2>Admin Dashboard</h2>

<!-- TOP SUMMARY CARDS -->
<div style="display:flex; gap:20px; margin-top:20px; flex-wrap:wrap;">

    <!-- PRODUCTS -->
    <div style="border:1px solid #ccc; padding:15px; width:260px;">
        <h4>Products</h4>
        <p>Total products: <b>@Model.TotalProducts</b></p>
        <p>Added today: <b>@Model.ProductsAddedToday</b></p>

        <a class="btn btn-primary"
           asp-area="Admin" asp-controller="Products" asp-action="Create">
            + Add Product
        </a>
    </div>

    <!-- USERS -->
    <div style="border:1px solid #ccc; padding:15px; width:260px;">
        <h4>Users</h4>
        <p>Total users: <b>@Model.TotalUsers</b></p>

        <a class="btn btn-outline-primary"
           asp-area="Admin" asp-controller="Users" asp-action="Index">
            View Users
        </a>
    </div>

    <!-- DAILY SUMMARY -->
    <div style="border:1px solid #ccc; padding:15px; width:260px;">
        <h4>Daily Summary (Today)</h4>
        <ul>
            <li>Orders today: <b>@Model.OrdersToday</b></li>
            <li>Sales today: <b>@Model.SalesToday</b></li>
            <li>Average order: <b>@Model.AverageOrderToday</b></li>
        </ul>
    </div>

</div>

<hr />

<!-- SALES BY DAY -->
<h4>Sales by Day </h4>

@if (Model.DailySales != null && Model.DailySales.Any())
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Date</th>
                <th>Orders</th>
                <th>Total Sales</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var d in Model.DailySales)
            {
                <tr>
                    <td>@d.Day.ToString("yyyy-MM-dd")</td>
                    <td>@d.OrdersCount</td>
                    <td>@d.TotalSales</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No sales data available.</p>
}
